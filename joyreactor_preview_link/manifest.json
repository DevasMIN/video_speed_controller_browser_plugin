{
  "manifest_version": 3,
  "name": "__MSG_extName__",
  "version": "1.0",
  "description": "__MSG_extDescription__",
  "default_locale": "ru",
  "host_permissions": ["https://joy.reactor.cc/*", "*://joyreactor.cc/*", "*://*.joyreactor.cc/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "__MSG_extName__",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/favicon-16x16.png",
      "32": "icons/favicon-32x32.png",
      "128": "icons/noautoplay_128x128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://joy.reactor.cc/*"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "icons": {
    "16": "icons/favicon-16x16.png",
    "32": "icons/favicon-32x32.png",
    "128": "icons/noautoplay_128x128.png"
  }
}

